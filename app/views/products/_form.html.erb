<%= form_for(@product, :html => { :class => "form-horizontal" }, :multipart => true) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :category, "#{t 'product.category'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.select(:category_id, @categories.collect {|category| [category.name, category.id,]}, {:prompt => "#{t 'prompt'} #{t 'category.category'}"}, {:class => "form-control"}) %></div>
  </div>
  <div class="form-group">
    <%= f.label :code, "Code", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_field :code, :required => true, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= f.label :name, "#{t 'product.name'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_field :name, :required => true, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= f.label :merk, "Merk", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_field :merk, :required => true, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= f.label :material, "Material", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_field :material, :required => true, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= f.label :size, "Available Size", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_field :size, :required => true, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= f.label :color, "Available Color", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_field :color, :required => true, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= f.label :price, "Price", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_field :price, :required => true, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= f.label :description, "Description", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_area :description, :rows => 3, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= f.label :picture, "Picture", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.file_field :picture, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-4"></div>
    <div class="col-sm-6"><%= f.submit "#{t 'submit'}", :class => "btn btn-success", :disable_with => "#{t 'disable_with'}" %></div>
  </div>
<% end %>
